{
  "name": "@guardtime/common",
  "sideEffects": false,
  "version": "1.0.6",
  "description": "A grab bag of common utilities, data models and other functionality.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/guardtime/js-common"
  },
  "types": "./lib/main.d.ts",
  "module": "./lib/main.js",
  "main": "./lib/main.js",
  "type": "module",
  "exports": {
    ".": "./lib/main.js",
    "./coder/base32": "./lib/coders/Base32Coder.js",
    "./coder/base64": "./lib/coders/Base64Coder.js",
    "./coder/hex": "./lib/coders/UnsignedLongCoder.js",
    "./coder/long": "./lib/coders/UnsignedLongCoder.js",
    "./crc32": "./lib/crc/CRC32.js",
    "./crypto/hmac": "./lib/crypto/HMAC.js",
    "./crypto/hmac/node": "./lib/crypto/NodeHMAC.js",
    "./crypto/hmac/web": "./lib/crypto/WebHMAC.js",
    "./crypto/x509": "./lib/crypto/X509.js",
    "./crypto/random/node": "./lib/crypto/NodeCryptoRandom.js",
    "./crypto/random/web": "./lib/crypto/WebCryptoRandom.js",
    "./crypto/pkcs7/verify": "./lib/crypto/CMSVerification.js",
    "./hash/datahash": "./lib/hash/DataHash.js",
    "./hash/hasher": "./lib/hash/DataHasher.js",
    "./hash/hasher/node": "./lib/hash/NodeHasher.js",
    "./hash/hasher/web": "./lib/hash/WebHasher.js",
    "./hash/error": "./lib/hash/HashingError.js",
    "./hash/hasher/sync": "./lib/hash/SyncDataHasher.js",
    "./hash/algorithm": "./lib/hash/HashAlgorithm.js",
    "./string/ascii": "./lib/strings/ASCIIConverter.js",
    "./string/utf8": "./lib/strings/Utf8Converter.js",
    "./string/tabprefix": "./lib/strings/StringUtils.js",
    "./random/long": "./lib/random/RandomUtil.js",
    "./array": "./lib/utils/Array.js",
    "./verification/policy": "./lib/models/Policy.js",
    "./verification/rule": "./lib/models/Rule.js",
    "./verification/result": "./lib/models/Result.js"
  },
  "scripts": {
    "clean:lib": "node -e \"try { require('fs').rmSync('./lib', { recursive: true }); } catch(err) { console.log(err); }\"",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "mjs": "npm run clean:lib && tsc -d",
    "all": "npm run test && npm run mjs",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.test\\.ts$",
    "moduleNameMapper": {
      "^(\\.\\.?/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/node-forge": "^0.9.5",
    "rfc4648": "^1.5.0",
    "base64-js": "^1.5.1",
    "big-integer": "^1.6.48",
    "node-forge": "git+https://github.com/roysjosh/forge.git#ImplementPkcs7Verify"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  }
}
