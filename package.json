{
  "name": "@guardtime/common",
  "sideEffects": false,
  "version": "1.0.4",
  "description": "A grab bag of common utilities, data models and other functionality.",
  "license": "Apache-2.0",
  "main": "./lib/main.mjs",
  "types": "./lib/main.d.ts",
  "scripts": {
    "clean:lib": "node -e \"try { require('fs').rmdirSync('./lib', { recursive: true }); } catch(err) { console.log(err); }\"",
    "test": "jest",
    "mjs": "npm run clean:lib && tsc -d && node -e \"require('fs').rename('lib/main.js', 'lib/main.mjs', function(err) { if (err) console.log(err); })\"",
    "all": "npm run test && npm run mjs",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "babel-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/node-forge": "^0.9.5",
    "base64-js": "^1.5.1",
    "big-integer": "^1.6.48",
    "node-forge": "git+https://github.com/roysjosh/forge.git#ImplementPkcs7Verify",
    "base32-encode": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@babel/core": "^7.14.0",
    "@babel/runtime": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "typescript": "^4.2.4",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "prettier": "^2.2.1",
    "jest": "^26.6.3"
  }
}
