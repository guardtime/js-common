{
  "name": "@guardtime/common",
  "sideEffects": false,
  "version": "1.0.4",
  "description": "A grab bag of common utilities, data models and other functionality.",
  "license": "Apache-2.0",
  "main": "./lib/main.mjs",
  "types": "./lib/main.d.ts",
  "type": "module",
  "scripts": {
    "clean:lib": "node -e \"try { require('fs').rmdirSync('./lib', { recursive: true }); } catch(err) { console.log(err); }\"",
    "test": "jest",
    "mjs": "npm run clean:lib && tsc -d && node -e \"require('fs').rename('lib/main.js', 'lib/main.mjs', function(err) { if (err) console.log(err); })\"",
    "all": "npm run test && npm run mjs",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(base32-encode))/"
    ],
    "moduleNameMapper": {
      "^(\\.\\.?/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/node-forge": "^0.9.5",
    "base64-js": "^1.5.1",
    "big-integer": "^1.6.48",
    "node-forge": "git+https://github.com/roysjosh/forge.git#ImplementPkcs7Verify",
    "base32-encode": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "typescript": "^4.4.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "prettier": "^2.3.2",
    "jest": "^27.0.6"
  }
}
