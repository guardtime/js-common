{
  "name": "@guardtime/common",
  "sideEffects": false,
  "version": "1.1.0",
  "description": "A grab bag of common utilities, data models and other functionality.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/guardtime/js-common"
  },
  "type": "module",
  "exports": {
    "./lib/*": "./lib/*"
  },
  "scripts": {
    "clean:lib": "node -e \"try { require('fs').rmSync('./lib', { recursive: true }); } catch(err) { console.log(err); }\"",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "mjs": "npm run clean:lib && tsc -d",
    "all": "npm run test && npm run mjs",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.test\\.ts$",
    "moduleNameMapper": {
      "^(\\.\\.?/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@types/base64-js": "^1.3.0",
    "rfc4648": "^1.5.2",
    "base64-js": "^1.5.1",
    "big-integer": "^1.6.51",
    "node-forge": "git+https://github.com/martti007/forge-1.git"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.22.6",
    "@babel/preset-env": "^7.22.6",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  }
}
