{
  "name": "@guardtime/common",
  "sideEffects": false,
  "version": "1.0.3",
  "description": "A grab bag of common utilities, data models and other functionality.",
  "license": "Apache-2.0",
  "main": "./lib/main.mjs",
  "types": "./lib/main.d.ts",
  "scripts": {
    "test": "jest",
    "mjs": "rimraf lib && tsc -d && node -e \"require('fs').rename('lib/main.js', 'lib/main.mjs', function(err) { if (err) console.log(err); })\"",
    "all": "run-s test mjs",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "babel-jest",
      "^.+\\.m?js$": "babel-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx",
      "jsx",
      "node",
      "mjs"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@types/base64-js": "^1.2.5",
    "@types/node-forge": "^0.9.3",
    "base64-js": "^1.3.1",
    "big-integer": "^1.6.48",
    "node-forge": "github:roysjosh/forge#ImplementPkcs7Verify",
    "base32-encode": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@babel/core": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "babel-jest": "^25.2.6",
    "babel-loader": "^8.1.0",
    "typescript": "^3.8.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "prettier": "^2.0.4",
    "jest": "^25.2.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
