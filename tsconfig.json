{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "DOM",
      "es2020"
    ],

    "declaration": true
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
